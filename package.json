{
  "name": "stateless-maybe-js",
  "description": "A stateless implementation of the maybe monad",
  "version": "2.2.3",
  "author": "Emiliano Bovetti",
  "license": "GPL-3.0",
  "keywords": [
    "maybe",
    "option",
    "monad",
    "optional",
    "nullable",
    "null",
    "undefined",
    "functional",
    "fp",
    "typescript"
  ],
  "main": "./src/maybe.js",
  "types": "./src/maybe.d.ts",
  "scripts": {
    "test": "npx nyc mocha"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/emilianobovetti/stateless-maybe-js.git"
  },
  "bugs": {
    "url": "https://github.com/emilianobovetti/stateless-maybe-js/issues"
  },
  "release": {
    "branch": "master",
    "prepare": [
      "@semantic-release/npm",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "dist/*.js"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "devDependencies": {
    "@semantic-release/git": "^9.0.0",
    "coveralls": "^3.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.28.0",
    "jsverify": "^0.8.4",
    "lodash": "^4.17.21",
    "mocha": "^9.0.0",
    "nyc": "^15.1.0",
    "semantic-release": "^19.0.3",
    "should": "^13.2.3",
    "should-sinon": "^0.0.6",
    "sinon": "^11.1.1",
    "uglify-js": "^3.13.9"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
